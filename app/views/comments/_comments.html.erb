<h2>Comments</h2>
  <% @post.comments.each do |comment| %>
    <div class="well">
      <p><strong><%= comment.username %></strong>: <%=comment.body%>
        <%= link_to "[x]", [comment.post, comment],
            method: :delete,
            data: {confirm: 'Are you sure?'},
            :class => 'btn btn-danger'  %>
      </p>
      </div>
      <% end %>
